<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>payment-demo</display-name>
    <servlet>
        <servlet-name>PayMentServlet</servlet-name>
        <servlet-class>com.ips.core.psfp.demo.servlet.PayMentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayMentServlet</servlet-name>
        <url-pattern>/toPayment.html/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.ips.core.psfp.demo.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ReturnPayMentServlet</servlet-name>
        <servlet-class>com.ips.core.psfp.demo.servlet.ReturnPayMentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReturnPayMentServlet</servlet-name>
        <url-pattern>/merchant/success.html/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReturnPayMentServlet</servlet-name>
        <url-pattern>/merchant/s2surl.html/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReturnPayMentServlet</servlet-name>
        <url-pattern>/merchant/notifyurl.html/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


</web-app>